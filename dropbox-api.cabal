               , bytestring             == 0.10.0.2
               , unordered-containers   >= 0.2.3.0
               , attoparsec             >= 0.10.4.0
               , resourcet              == 0.4.10
               , aeson                  >= 0.6        && < 0.8
               , text                   == 0.11.3.1
               , http-conduit           == 2.0.0.3
               , authenticate-oauth     == 1.4.0.8
               , conduit                >= 1.0.9.3
               , uuid                   == 1.3.3
                       
  
  -- Directories containing source files.
  -- hs-source-dirs:      
  
  -- Base language which the package is written in.
  default-language:    Haskell2010

Test-Suite test-dropbox
    type:       exitcode-stdio-1.0
    main-is:    test/DropboxTest.hs
    build-depends:   base
                   , bytestring             == 0.10.0.2
                   , unordered-containers   >= 0.2.3.0
                   , attoparsec             >= 0.10.4.0
                   , resourcet              == 0.4.10
                   , aeson                  >= 0.6        && < 0.8
